    <GameTooltip name="AFTooltipTemplate" mixin="GameTooltipDataMixin" frameStrata="TOOLTIP" clampedToScreen="true" hidden="true" virtual="true">
        <!-- <KeyValues>
            <KeyValue key="textLeft1Font" value="AF_FONT_TITLE" type="string"/>
            <KeyValue key="textRight1Font" value="AF_FONT_TITLE" type="string"/>
