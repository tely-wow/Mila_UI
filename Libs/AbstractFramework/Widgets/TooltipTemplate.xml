        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentTextLeft1" inherits="AF_FONT_TOOLTIP_HEADER" justifyH="LEFT" hidden="true"/>
				<FontString name="$parentTextRight1" inherits="AF_FONT_TOOLTIP_HEADER" justifyH="RIGHT" hidden="true">
